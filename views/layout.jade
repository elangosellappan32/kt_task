doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="csrf-token" content=csrfToken)
    title Office Items Tracker

    // Stylesheets
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
    link(rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css")
    link(rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.bootstrap5.min.css")
    link(rel="stylesheet" href="/css/style.css")

  body
    // Navigation
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-4
      .container
        a.navbar-brand(href="/")
          i.fas.fa-cube.me-2
          | Office Items Tracker

        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon

        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.me-auto
            if user
              li.nav-item
                a.nav-link(href="/assets")
                  i.fas.fa-box.me-2
                  | Assets
              li.nav-item
                a.nav-link(href="/employees")
                  i.fas.fa-users.me-2
                  | Employees
              li.nav-item
                a.nav-link(href="/asset-categories")
                  i.fas.fa-tags.me-2
                  | Categories
              li.nav-item
                a.nav-link(href="/stock")
                  i.fas.fa-chart-bar.me-2
                  | Stock
              li.nav-item
                a.nav-link(href="/asset-history")
                  i.fas.fa-history.me-2
                  | History

          ul.navbar-nav
            if user
              li.nav-item
                a.nav-link(href="/auth/logout")
                  i.fas.fa-sign-out-alt.me-2
                  | Logout
            else
              li.nav-item
                a.nav-link(href="/auth/login")
                  i.fas.fa-sign-in-alt.me-2
                  | Login

    .container
      block content

    // Scripts for Jquery, ajax, datatable and pdf generator
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js")
    script(src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js")
    script(src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js")
    script(src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.bootstrap5.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js")
    script(src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js")
    script(src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.31/jspdf.plugin.autotable.min.js")

    block scripts

    script.
      document.addEventListener("DOMContentLoaded", function() {
        if (window.jQuery && typeof bootstrap !== "undefined") {
          // Setup tooltips
          document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(function(item) {
            new bootstrap.Tooltip(item);
          });

          // Setup popovers
          document.querySelectorAll('[data-bs-toggle="popover"]').forEach(function(item) {
            new bootstrap.Popover(item);
          });
        }
      });